@model LoginAdminUser

    <div style="margin-left:5%;margin-right:5%">
        <!-- Top Header -->
        @await Html.PartialAsync("_Header")

        <nav class="navbar navbar-expand-lg navbar-light bg-light">
            <div class="navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav mr-auto">
                    <!--Active menu item-->
                    <li class="nav-item active">
                        <a class="nav-link" asp-controller="Home" asp-action="Index">Home <span class="sr-only">(current)</span></a>
                    </li>
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            Products
                        </a>
                        <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                            <a class="dropdown-item" href="#">Action</a>
                            <a class="dropdown-item" href="#">Another action</a>
                            <div class="dropdown-divider"></div>
                            <a class="dropdown-item" href="#">Something else here</a>
                        </div>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Home" asp-action="AboutUS">About Us</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Home" asp-action="Contact">Contact</a>
                    </li>
                </ul>
                <form class="form-inline my-2 my-lg-0">
                    <input class="form-control mr-sm-2" type="search" placeholder="Search" aria-label="Search">
                    <button class="btn btn-outline-success my-2 my-sm-0" type="submit">Search</button>
                </form>
            </div>
        </nav>

        <!--Login Section-->
        <section>
            <div class="container-fluid p-2">
                <form asp-controller="Account" asp-action="Login" method="post">
                    <div class="form-row p-2">
                        <div class="col-3">
                            <p class="h3 text-center">Login User</p>
                        </div>
                    </div>
                    <div class="form-row" p-2>
                        <div asp-validation-summary="All" class="text-danger"></div>
                    </div>
                    <div class="form-row p-2">
                        <div class="col-3">
                            <input type="text" asp-for="UserName" class="form-control" placeholder="UserName">
                            <input type="hidden" asp-for="ReturnUrl" class="form-control" value="@ViewBag.ReturnUrl">
                        </div>
                    </div>
                    <div class="form-row p-2">
                        <div class="col-3">
                            <input type="password" asp-for="Password" class="form-control" placeholder="Password">
                        </div>
                    </div>
                    <div class="form-row p-2">
                        <div class="col">
                            <button type="submit" class="btn btn-primary">Log In</button>
                        </div>
                    </div>
                </form>
            </div>
        </section>

        <!--Register Section-->
        <section>
            <div class="container-fluid p-2">
                <form asp-controller="Account" asp-action="Register" method="post">
                    <div class="form-row p-2">
                        <div class="col-3">
                            <p class="h3 text-center">Register User</p>
                        </div>
                    </div>
                    <div class="form-row p-2">
                        <div class="col-3">
                            <input type="text" asp-for="UserName" class="form-control" placeholder="UserName">
                            <input type="hidden" asp-for="ReturnUrl" class="form-control">
                        </div>
                    </div>
                    <div class="form-row p-2">
                        <div class="col-3">
                            <input type="password" asp-for="Password" class="form-control" placeholder="Password">
                        </div>
                    </div>
                    <div class="form-row p-2">
                        <div class="col">
                            <button type="submit" class="btn btn-primary">Register</button>
                        </div>
                    </div>
                </form>
            </div>
        </section>

        @await Html.PartialAsync("_Footer")

    </div>

